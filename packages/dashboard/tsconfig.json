{
  "compilerOptions": {
     "jsx": "react",
     "target": "es2016",
     "outDir": "dist",
     "allowJs": true,
     "skipLibCheck": true,
     "strict": true,
     "forceConsistentCasingInFileNames": true,
     "module": "ES2020",
     "allowSyntheticDefaultImports": true,
     "moduleResolution": "Node",
     "declaration": true,
     "declarationDir": "dist"
  },
  "include": ["src/**/*", "rollup.config.ts"],
  "exclude": [
    "jest.config.ts",
    "dist",
    "node_modules",
    "stories/**/*.stories.tsx",
    "testing"
  ],
}