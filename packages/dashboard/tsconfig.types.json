{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/types",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": false,
    "incremental": true,
    "tsBuildInfoFile": "./dist/types/.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    ".storybook",
    "e2e",
    "stories",
    "testing",
    "public",
    "dist",
    "coverage",
    "**/*.spec.*",
    "**/*.test.*"
  ]
}
