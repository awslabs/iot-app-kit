{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "module": "commonjs",
    "incremental": true,
    "tsBuildInfoFile": "./dist/cjs/.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "functional-tests",
    "**/*.spec.*",
    "**/*.test.*"
  ]
}
