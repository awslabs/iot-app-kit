{
  "name": "@iot-app-kit/tools-iottwinmaker",
  "publishConfig": {
    "access": "public"
  },
  "version": "12.2.1",
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "files": [
    "dist",
    "NOTICE"
  ],
  "type": "module",
  "main": "./dist/cjs/index.cjs.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "@iot-app-kit/development": "./src/index.cts",
      "default": {
        "types": "./dist/esm/index.d.ts",
        "require": "./dist/cjs/index.cjs.js",
        "import": "./dist/esm/index.js",
        "default": "./dist/esm/index.js"
      }
    }
  },
  "sideEffects": [
    "./src/configurePlatform.cts"
  ],
  "bin": {
    "tmdt": "./dist/cjs/cli.js"
  },
  "scripts": {
    "build": "NODE_OPTIONS='--import tsx/esm' vite build && npm run package",
    "postbuild": "iot-postbuild",
    "build-global": "npm run clean && npm run build && npm run package && npm install -g",
    "clean": "npx rimraf dist coverage tmdt_local .cache *.tgz LICENSE NOTICE && npm uninstall -g tmdt || true",
    "clean:turbo": "npx rimraf .turbo",
    "clean:nuke": "npm run clean && npm run clean:turbo && npx rimraf node_modules",
    "lint": "eslint . --max-warnings=0 --cache --cache-location .cache/eslint/",
    "fix": "eslint --fix . --cache --cache-location .cache/eslint/",
    "test": "NODE_OPTIONS='--import tsx/esm' TZ=UTC vitest run -c vite.config.ts --silent",
    "test:watch": "NODE_OPTIONS='--import tsx/esm' TZ=UTC vitest -c vite.config.ts --silent",
    "test-functional": "TZ=UTC vitest --silent -c vitest.functional.ts",
    "test:typescript": "tsc --noEmit",
    "copy:license": "cp ../../LICENSE LICENSE",
    "copy:notice": "cp ../../NOTICE NOTICE",
    "prepack": "npm run copy:license && npm run copy:notice && iot-prepack",
    "pack": "npm pack",
    "postpack": "iot-postpack",
    "package": "npx tsx ./src/configurePlatform.cts",
    "package-linux": "pkg . --targets node16-linux-x64 --output tmdt_local",
    "package-mac": "pkg . --targets node16-macos-x64 --output tmdt_local"
  },
  "devDependencies": {
    "@iot-app-kit/eslint-config": "*",
    "@iot-app-kit/ts-config": "*",
    "@iot-app-kit/vite-config": "*",
    "@types/node": "^18.16.18",
    "@types/prompts": "^2.4.4",
    "@types/yargs": "^17.0.24",
    "@vitest/coverage-v8": "^2.1.5",
    "aws-sdk-client-mock": "^3.1.0",
    "jest-extended": "^3.2.4",
    "pkg": "^5.8.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.11",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.376.0",
    "@aws-sdk/client-iam": "^3.363.0",
    "@aws-sdk/client-iottwinmaker": "^3.589.0",
    "@aws-sdk/client-kinesis-video": "^3.363.0",
    "@aws-sdk/client-s3": "^3.363.0",
    "@aws-sdk/client-sts": "^3.363.0",
    "@aws-sdk/types": "^3.696.0",
    "prompts": "^2.4.2",
    "yargs": "^17.7.2"
  },
  "pkg": {
    "scripts": "dist/cjs/**/*.js"
  },
  "iotAppKit": {
    "scope": "public"
  }
}
