    "@types/react-test-renderer": "^18.0.0",
    "@types/styled-components": "^5.1.12",
    "@types/three": "^0.149.0",
    "babel-jest": "^29.6.4",
    "babel-plugin-formatjs": "10.5.3",
    "copyfiles": "^2.4.1",
    "eslint-config-iot-app-kit": "10.13.1",
    "husky": "8.0.3",
    "jest": "^29.7.0",
    "jest-coverage-ratchet": "^0.2.3",
    "jest-environment-jsdom": "29.7.0",
    "jest-simple-dot-reporter": "^1.0.5",
    "jest-styled-components": "^7.0.0",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.22",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.31",
    "prettier": "^2.8.8",
    "prettier-eslint": "^15.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.4.4",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^5.0.1",
    "sass": "^1.63.4",
    "sass-loader": "^13.3.2",
    "svglint": "^2.4.0",
    "ts-jest": "^29.1.1",
    "ts-patch": "^2.1.0",
    "ts-transform-react-intl": "^0.4.1",
    "webpack": "^5.94.0"
  },
  "dependencies": {
    "@aws-sdk/client-iottwinmaker": "3.589.0",
    "@formatjs/ts-transformer": "3.13.3",
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@iot-app-kit/core": "10.13.1",
    "@iot-app-kit/react-components": "10.13.1",
    "@iot-app-kit/related-table": "10.13.1",
    "@iot-app-kit/source-iottwinmaker": "10.13.1",
