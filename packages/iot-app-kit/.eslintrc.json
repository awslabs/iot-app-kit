{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "ignorePatterns": ["cypress", "stencil.config.ts", "configuration", "__mocks__"],
  "extends": ["airbnb" ,"airbnb-typescript", "plugin:prettier/recommended", "plugin:chai-friendly/recommended"],
  "plugins": ["prettier", "chai-friendly"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "settings": {
    "react": {
      "pragma": "h"
    }
  },
  "rules": {
    "max-len": [
      1,
      130,
      2,
      {
        "ignoreComments": true
      }
    ],
    "indent": "off",
    "@typescript-eslint/no-use-before-define": [1, "nofunc"],
    "@typescript-eslint/indent": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/no-noninteractive-element-interactions": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-indent": "off",
    "object-curly-newline": "off",
    "lines-between-class-members": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "react/no-unknown-property": "off",
    "import/no-named-as-default": "off",
    "react/prop-types": "off",
    "react/jsx-closing-bracket-location": [2, "tag-aligned"],
    "react/jsx-one-expression-per-line": "off",
    "react/require-default-props": "off",
    "import/prefer-default-export": "off",
    "react/button-has-type": "off",
    "import/extensions": "off",
    "prettier/prettier": ["error"],
    "react/static-property-placement": "off",
    "react/jsx-props-no-spreading": "off"
  },
  "overrides": [
    {
      "files": ["*.spec.tsx", "*.spec.ts"],
      "rules": {
        "max-len": 0
      }
    }
  ]
}
