{
  "name": "@iot-app-kit/react-components",
  "license": "Apache-2.0",
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/es/index.d.ts",
  "files": [
    "dist/",
    "CHANGELOG.md",
    "*NOTICE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "version": "3.0.0",
  "scripts": {
    "build": "npm run clean && npm run build:es && npm run build:cjs",
    "build:es": "tsc -p ./tsconfig.json --outDir ./dist/es",
    "build:cjs": "tsc -p ./tsconfig.json --outDir ./dist/cjs --module CommonJS",
    "clean": "rm -rf dist && rm -rf storybook-static",
    "dev": "npm-watch build",
    "copy:license": "cp ../../LICENSE LICENSE",
    "copy:notice": "cp ../../NOTICE NOTICE",
    "prepack": "npm run copy:license && npm run copy:notice",
    "pack": "npm pack",
    "test": "TZ=utc jest",
    "test:watch": "TZ=utc jest --watch",
    "lint": "eslint .",
    "fix": "eslint --fix .",
    "test:ui": "npx playwright test",
    "test:ui-update": "npx playwright test --update-snapshots",
    "start": "start-storybook -p 6007"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,html,css,tsx",
      "quiet": "false"
    }
  },
  "devDependencies": {
    "@iot-app-kit/jest-config": "*",
    "@iot-app-kit/source-iotsitewise": "^3.0.0",
    "@iot-app-kit/testing-util": "^3.0.0",
    "@iot-app-kit/ts-config": "*",
    "@jest/globals": "^29.5.0",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^6.5.16",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/react": "^14.0.0",
    "@types/color": "^3.0.3",
    "@types/d3": "^7.4.0",
    "@types/dompurify": "2.3.3",
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^9.0.1",
    "@types/video.js": "^7.3.15",
    "babel-plugin-formatjs": "10.3.18",
    "copyfiles": "^2.4.1",
    "d3-array": "^3.2.2",
    "eslint-config-iot-app-kit": "*",
    "flush-promises": "^1.0.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-extended": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@cloudscape-design/collection-hooks": "^1.0.19",
    "@cloudscape-design/components": "^3.0.226",
    "@iot-app-kit/components": "3.0.0",
    "@iot-app-kit/core": "3.0.0",
    "@iot-app-kit/source-iottwinmaker": "3.0.0",
    "color": "^4.2.3",
    "d3-shape": "^3.2.0",
    "dompurify": "2.3.4",
    "parse-duration": "^1.0.3",
    "uuid": "^9.0.0",
    "video.js": "7.20.3"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18"
  },
  "bugs": {
    "url": "https://github.com/awslabs/iot-app-kit/issues"
  },
  "homepage": "https://github.com/awslabs/iot-app-kit#readme"
}
