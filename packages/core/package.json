{
  "name": "@iot-app-kit/core",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "version": "4.0.0",
  "description": "IoT Application Kit core",
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/es/index.d.ts",
  "files": [
    "dist/",
    "CHANGELOG.md",
    "*NOTICE"
  ],
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/awslabs/iot-app-kit.git",
    "directory": "packages/core"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "quiet": "false"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:es && npm run build:cjs",
    "build:es": "tsc -p ./tsconfig.build.json --outDir ./dist/es",
    "build:cjs": "tsc -p ./tsconfig.build.json --outDir ./dist/cjs --module CommonJS",
    "clean": "rm -rf dist",
    "dev": "npm-watch build",
    "lint": "eslint . --max-warnings=2",
    "fix": "eslint --fix .",
    "test": "npm run test:jest && npm run test:typescript",
    "test:jest": "TZ=UTC jest",
    "test:typescript": "tsc --noEmit",
    "test.watch": "TZ=UTC jest --watchAll",
    "copy:license": "cp ../../LICENSE LICENSE",
    "copy:notice": "cp ../../NOTICE NOTICE",
    "prepack": "npm run copy:license && npm run copy:notice",
    "pack": "npm pack"
  },
  "dependencies": {
    "@aws-sdk/client-iotsitewise": "^3.87.0",
    "d3-array": "^3.2.2",
    "intervals-fn": "^3.0.3",
    "parse-duration": "^1.0.3",
    "redux": "^4.2.1",
    "rxjs": "^7.8.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@iot-app-kit/jest-config": "*",
    "@iot-app-kit/ts-config": "*",
    "@types/d3-array": "^3.0.4",
    "@types/jest": "^29.4.0",
    "@types/uuid": "^9.0.1",
    "eslint-config-iot-app-kit": "3.0.0",
    "flush-promises": "^1.0.2",
    "jest": "^29.5.0",
    "jest-extended": "^3.2.4",
    "npm-watch": "^0.11.0",
    "typescript": "^4.9.5"
  },
  "bugs": {
    "url": "https://github.com/awslabs/iot-app-kit/issues"
  },
  "homepage": "https://github.com/awslabs/iot-app-kit#readme"
}
