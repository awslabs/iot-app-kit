{
  "name": "@iot-app-kit/table",
  "publishConfig": {
    "access": "public"
  },
  "version": "3.0.0",
  "description": "IoT Application Kit - Table component",
  "license": "Apache-2.0",
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/es/index.d.ts",
  "files": [
    "dist/",
    "CHANGELOG.md",
    "NOTICE",
    "LICENSE"
  ],
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com/"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,html,css,tsx",
      "quiet": "false"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:es",
    "build:cjs": "tsc --outDir dist/cjs --module CommonJS",
    "build:es": "tsc --outDir dist/es",
    "clean": "rm -rf dist",
    "dev": "npm-watch build",
    "lint": "eslint .",
    "fix": "eslint --fix .",
    "test": "TZ=UTC jest",
    "test.watch": "TZ=UTC jest --watchAll",
    "test:typescript": "tsc --noEmit",
    "copy:license": "cp ../../LICENSE LICENSE",
    "copy:notice": "cp ../../NOTICE NOTICE",
    "prepack": "npm run copy:license && npm run copy:notice",
    "pack": "npm pack"
  },
  "devDependencies": {
    "@iot-app-kit/jest-config": "^3.0.0",
    "@iot-app-kit/ts-config": "*",
    "@types/d3-array": "^3.0.4",
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "eslint-config-iot-app-kit": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-extended": "^3.2.4",
    "npm-watch": "^0.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18"
  },
  "dependencies": {
    "@awsui/collection-hooks": "^1.0.0",
    "@awsui/components-react": "^3.0.0",
    "@iot-app-kit/core": "3.0.0",
    "@synchro-charts/core": "7.2.0",
    "d3-array": "^3.2.2"
  }
}
