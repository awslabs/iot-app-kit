{
  "name": "@iot-app-kit/table",
  "publishConfig": {
    "access": "public"
  },
  "version": "3.0.0",
  "description": "IoT Application Kit - Table component",
  "license": "Apache-2.0",
  "main": "./dist/index.cj.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "directories": {
    "dist": "dist"
  },
  "files": [
    "dist/",
    "CHANGELOG.md",
    "*NOTICE"
  ],
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com/"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,html,css,tsx",
      "quiet": "false"
    }
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf screenshot",
    "build": "npm run clean && npm run build:types && rollup --config rollup.config.js",
    "build:types": "tsc --outDir dist/types --declaration true --emitDeclarationOnly true",
    "dev": "npm-watch build",
    "lint": "eslint .",
    "fix": "eslint --fix .",
    "test": "npm-run-all -p test:jest test:typescript",
    "test:jest": "TZ=UTC jest --coverage",
    "test.watch": "TZ=UTC jest --watchAll",
    "jest": "TZ=UTC jest",
    "test:typescript": "tsc --noEmit",
    "copy:license": "cp ../../LICENSE LICENSE",
    "copy:notice": "cp ../../NOTICE NOTICE",
    "prepack": "npm run copy:license && npm run copy:notice",
    "pack": "npm pack"
  },
  "devDependencies": {
    "@aws-sdk/client-iotsitewise": "^3.39.0",
    "@awsui/design-tokens": "^3.0.0",
    "@babel/preset-env": "^7.18.10",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^27.5.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "babel-jest": "^29.0.1",
    "eslint-config-iot-app-kit": "3.0.0",
    "jest": "^27.5.0",
    "jest-cli": "^27.5.0",
    "jest-environment-jsdom": "^27.5.0",
    "jest-extended": "^2.0.0",
    "npm-watch": "^0.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-import-css": "^3.0.3",
    "sass": "^1.30.0",
    "ts-jest": "^27.1.3"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@awsui/collection-hooks": "^1.0.0",
    "@awsui/components-react": "^3.0.0",
    "@iot-app-kit/core": "3.0.0",
    "@synchro-charts/core": "7.2.0",
    "d3-array": "^3.1.6"
  }
}
