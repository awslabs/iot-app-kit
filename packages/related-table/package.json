{
  "name": "@iot-app-kit/related-table",
  "publishConfig": {
    "access": "public"
  },
  "version": "4.0.0",
  "description": "IoT Application Kit - Related Table component",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.module.js",
  "source": "src/index.ts",
  "files": [
    "dist",
    "src",
    "CHANGELOG.md",
    "*NOTICE"
  ],
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/awslabs/iot-app-kit.git",
    "directory": "packages/related-table"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,html,css,tsx",
      "quiet": "false"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "microbundle --no-compress --tsconfig tsconfig.json --format esm,cjs --jsx React.createElement --jsxFragment React.Fragment",
    "dev": "npm-watch build",
    "test": "jest",
    "test-version": "jest --version",
    "lint": "eslint . --max-warnings=51",
    "fix": "eslint --fix .",
    "test.watch": "TZ=UTC jest --watchAll",
    "storybook": "start-storybook -p 6006",
    "copy:license": "cp ../../LICENSE LICENSE",
    "copy:notice": "cp ../../NOTICE NOTICE",
    "prepack": "npm run copy:license && npm run copy:notice",
    "pack": "npm pack"
  },
  "peerDependencies": {
    "@awsui/collection-hooks": "^1",
    "@awsui/components-react": "^3",
    "@awsui/design-tokens": "^3",
    "react": "^18",
    "react-dom": "^18",
    "styled-components": "^5"
  },
  "devDependencies": {
    "@awsui/collection-hooks": "^1.0.0",
    "@awsui/components-react": "^3.0.0",
    "@awsui/design-tokens": "^3.0.0",
    "@iot-app-kit/jest-config": "^3.0.0",
    "@iot-app-kit/ts-config": "^3.0.0",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addons": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/styled-components": "^5.1.26",
    "@types/uuid": "^9.0.1",
    "eslint-config-iot-app-kit": "3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-extended": "^3.2.4",
    "microbundle": "^0.15.1",
    "npm-watch": "^0.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "bugs": {
    "url": "https://github.com/awslabs/iot-app-kit/issues"
  },
  "homepage": "https://github.com/awslabs/iot-app-kit#readme"
}
