{
  "name": "@iot-app-kit/components",
  "publishConfig": {
    "access": "public"
  },
  "version": "3.0.0",
  "description": "IoT App Kit Components",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/iot-app-kit-components/iot-app-kit-components.esm.js",
  "files": [
    "dist/",
    "loader/",
    "*styles.css",
    "CHANGELOG.md",
    "*NOTICE"
  ],
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/awslabs/iot-app-kit.git",
    "directory": "packages/components"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,html,css,tsx",
      "quiet": "false"
    }
  },
  "scripts": {
    "build": "npm run clean && stencil build && npm run copy:styles",
    "clean": "rm -rf dist && rm -rf www && rm -rf loader",
    "copy:license": "cp ../../LICENSE LICENSE",
    "copy:notice": "cp ../../NOTICE NOTICE",
    "copy:styles": "cp dist/iot-app-kit-components/iot-app-kit-components.css styles.css",
    "dev": "npm-watch build",
    "prepack": "npm run copy:license && npm run copy:notice && npm run copy:styles",
    "pack": "npm pack",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec",
    "lint": "eslint . --max-warnings=7",
    "fix": "eslint --fix .",
    "test.watch": "stencil test --spec --watchAll"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@awsui/collection-hooks": "^1.0.0",
    "@awsui/components-react": "^3.0.0",
    "@awsui/design-tokens": "^3.0.0",
    "@iot-app-kit/core": "3.0.0",
    "@iot-app-kit/related-table": "3.0.0",
    "@iot-app-kit/source-iotsitewise": "3.0.0",
    "@iot-app-kit/table": "3.0.0",
    "@stencil/core": "^2.7.0",
    "@synchro-charts/core": "7.2.0",
    "lodash.merge": "^4.6.2",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@aws-sdk/client-iotsitewise": "^3.288.0",
    "@rollup/plugin-replace": "^3.0.0",
    "@stencil/router": "^1.0.1",
    "@types/chai": "^4.3.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^8.3.4",
    "chai": "^4.3.6",
    "eslint-config-iot-app-kit": "3.0.0",
    "flush-promises": "^1.0.2",
    "jest": "26.3.0",
    "jest-cli": "^26.5.1",
    "npm-watch": "^0.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^8.3.2"
  },
  "license": "Apache-2.0"
}
